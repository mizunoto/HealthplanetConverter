<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/getToken"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetToken">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/codeIntentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/code_intent"
            app:cornerRadius="0dp" />

        <EditText
            android:id="@+id/codeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codeIntentBtn"
            android:layout_marginTop="0dp"
            android:autofillHints="code"
            android:ems="10"
            android:hint="@string/code"
            android:inputType="text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/getTokenBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codeInput"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:text="@string/get_token"
            app:cornerRadius="0dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>