<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/clientIdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client ID"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/clientId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/clientSecretTitle"
            android:ems="10"
            android:hint="Client ID"
            android:inputType="text|textNoSuggestions"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/clientSecretTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clientId"
            android:text="Client Secret"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/clientSecret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clientId"
            android:layout_toEndOf="@id/clientSecretTitle"
            android:ems="10"
            android:hint="Client Secret"
            android:inputType="text|textNoSuggestions"
            android:textSize="24sp" />

        <Button
            android:id="@+id/saveSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clientSecret"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="保存"
            app:cornerRadius="0dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>